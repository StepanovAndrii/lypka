DO $$
BEGIN
   IF NOT EXISTS (SELECT 1 FROM pg_roles WHERE rolname = '$HC_USER') THEN
       CREATE USER $HC_USER WITH PASSWORD '$HC_PASSWORD';
   END IF;

   IF NOT EXISTS (SELECT 1 FROM pg_roles WHERE rolname = '$APP_USER') THEN
       CREATE USER $APP_USER WITH PASSWORD '$APP_PASSWORD';
   END IF;
END
$$;